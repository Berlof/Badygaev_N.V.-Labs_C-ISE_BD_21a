        <Button x:Name="buttonDel" Content="Удалить" HorizontalAlignment="Left" Margin="365.073,198,0,0" VerticalAlignment="Top" Width="75" Click="buttonDel_Click" Grid.Column="1"/>
        <Button x:Name="buttonRef" Content="Обновить" HorizontalAlignment="Left" Margin="364.073,252,0,0" VerticalAlignment="Top" Width="75" Click="buttonRef_Click" Grid.Column="1"/>
    </Grid>
</Window>
    