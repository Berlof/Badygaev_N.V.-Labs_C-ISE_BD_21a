        <TextBox x:Name="textBoxName" HorizontalAlignment="Left" Height="22" Margin="29.073,14,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="223" Grid.Column="1"/>
        <TextBox x:Name="textBoxCost" HorizontalAlignment="Left" Height="20" Margin="29.073,44,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="113" Grid.Column="1"/>
